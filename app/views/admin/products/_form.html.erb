<div class="container">
  <div class="mx-auto">
    <div class="row justify-content-center mt-3">
      <div class="col-10">
        <%= render 'shared/errors', obj: @product %>
      <%= form_with(model: [:admin, @product], class: "container shadow p-3 mb-3 bg-black rounded", local: true,html: { multipart: true } )do |f| %>
          <!-- Name Field -->
          <div class="form-group row mt-3">
            <%= f.label :name, "Name Of Product", class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.text_field :name, class: "form-control shadow p-2 bg-body-tertiary rounded", placeholder: "Enter name" %>
            </div>
          </div>
          
          <!-- Description Field -->
          <div class="form-group row mt-3">
            <%= f.label :description, "Description", class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.text_area :description, class: "form-control shadow p-2 bg-body-tertiary rounded", placeholder: "Enter description" %>
            </div>
          </div>
          
          <!-- Category Dropdown -->
          <div class="form-group row mt-3">
            <%= f.label :category_id, "Category", class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a Category" }, class: "form-control shadow p-2 bg-body-tertiary rounded" %>
            </div>
          </div>
          <% @product.images.each do |image| %>
            <%= form.hidden_field :images, multiple: true, value: image.signed_id %>
          <% end %>
          <!-- Images Upload Field -->
          <div class="form-group mb-3">
            <%= f.label :images, "Images", class: "form-label text-white" %>
            <%= f.file_field :images, multiple: true, class: "form-control" %>
          </div>
          
          <!-- Other Fields -->
          <!-- Add other fields like unit_price, stock_quantity, etc. similarly -->

        <!-- Unit Price Field -->
          <div class="form-group row mt-3">
            <%= f.label :unit_price, "Unit Price", class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.number_field :unit_price, class: "form-control shadow p-2 bg-body-tertiary rounded", placeholder: "Enter unit price" %>
            </div>
          </div>
          
          <!-- Stock Quantity Field -->
          <div class="form-group row mt-3">
            <%= f.label :stock_quantity, "Stock Quantity", class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.number_field :stock_quantity, class: "form-control shadow p-2 bg-body-tertiary rounded", placeholder: "Enter stock quantity" %>
            </div>
          </div>
          
        <!-- Is Vegetarian Field -->
          <div class="form-group row mt-3">
            <%= f.label :is_vegetarian, "Is Vegetarian", class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <div class="form-check form-check-inline">
                <%= f.radio_button :is_vegetarian, true, class: "form-check-input", id: "vegetarian_true" %>
                <%= f.label :is_vegetarian, "Vegetarian", value: true, class: "form-check-label text-white", for: "vegetarian_true" %>
              </div>
              <div class="form-check form-check-inline">
                <%= f.radio_button :is_vegetarian, false, class: "form-check-input", id: "vegetarian_false" %>
                <%= f.label :is_vegetarian, "Non-Vegetarian", value: false, class: "form-check-label text-white", for: "vegetarian_false" %>
              </div>
            </div>
          </div>

           <!-- Ingredients Field -->
          <div class="form-group row mt-3">
            <%= f.label :ingredients, "Ingredients", class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.text_area :ingredients, class: "form-control shadow p-2 bg-body-tertiary rounded", placeholder: "Enter ingredients" %>
            </div>
          </div>
          
          <!-- Storage Instructions Field -->
          <div class="form-group row mt-3">
            <%= f.label :storage_instructions, "Storage Instructions", class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.text_area :storage_instructions, class: "form-control shadow p-2 bg-body-tertiary rounded", placeholder: "Enter storage instructions" %>
            </div>
          </div>
          
          <!-- Submit Button -->
          <div class="form-group text-center mt-5">
            <%= f.submit "Submit", class: "btn btn-outline-dark btn-lg my-6 text-white" %>
          </div> 
        <% end %>
      </div>
      
      <div class="mb-3">
        <%= link_to '[Cancel and Return Back To Products Listing]', products_path, class: "row justify-content-center mt-4 text-black" %>
      </div>
    </div>
  </div>
</div>
