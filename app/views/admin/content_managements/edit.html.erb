                <div class="text-danger"><%= message %></div>
     <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :home_page_category_description, "Category Description" %>
    <%= form.text_area :home_page_category_description, class: "form-control", rows: 3 %>
    <% @content_management.errors.full_messages_for(:home_page_category_description).each do |message| %>
                <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :home_page_baking_header, "Baking Header" %>
    <%= form.text_field :home_page_baking_header, class: "form-control" %>
    <% @content_management.errors.full_messages_for(:home_page_baking_header).each do |message| %>
                <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :home_page_baking_description, "Baking Description" %>
    <%= form.text_area :home_page_baking_description, class: "form-control", rows: 3 %>
     <% @content_management.errors.full_messages_for(:home_page_baking_description).each do |message| %>
                <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :baking_image, "Baking Image" %>
    <%= form.text_field :baking_image, class: "form-control" %>
    <% @content_management.errors.full_messages_for(:baking_image).each do |message| %>
                <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :about_us_header, "About Us Header" %>
    <%= form.text_field :about_us_header, class: "form-control" %>
