<table class="table">
  <thead>
    <tr>
      <th scope="col">Customer_name</th>
      <th scope="col">Customer_email</th>
      <th scope="col">Customer_phone</th>
      <th scope="col">Status</th>
      <th scope="col">Total Amount</th>
    </tr>
  </thead>
  <tbody>
      <% @orders.each do |order| %>
                <tr>
                    <td><%=order.customer_name %></td>
                    <td><%= order.customer_email  %></td>
                    <td><%= order.customer_phone  %></td>
                    <td><%= order.order_status  %></td>
                    <td><%= order.total_amount %></td>
                    <td>
                        <span class="me-3">
                            <%= link_to  order_path(order), class: 'me-2' do %>
                            <svg id="i-user" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                <path d="M22 11 C22 16 19 20 16 20 13 20 10 16 10 11 10 6 12 3 16 3 20 3 22 6 22 11 Z M4 30 L28 30 C28 21 22 20 16 20 10 20 4 21 4 30 Z" />
                            </svg>
                            <% end %>
                        </span>
                    </td>   
                </tr>
                <tr>
        <% end %> 
   
  </tbody>
</table>