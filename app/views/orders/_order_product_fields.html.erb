<!-- app/views/orders/_order_product_fields.html.erb -->
<div class="nested-fields">
  <div class="field">
    <%= f.label :product_id, "Product" %>
    <%= f.collection_select :product_id, @products, :id, :name, prompt: "Select a Product" %>
  </div>
  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>
  <div class="links">
    <%= link_to_remove_association "Remove Product", f %>
  </div>
</div>
